<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
	<gvnix>
		<repositories>
			<repository>
				<id>gvNIX Add-on repository</id>
				<name>gvNIX Add-on repository</name>
				<url>https://gvnix.googlecode.com/svn/repo</url>
			</repository>
		</repositories>
		<properties>
			<cxf.version>2.7.3</cxf.version>
		</properties>
		<dependencies>
			<dependency>
				<groupId>org.gvnix</groupId>
				<artifactId>org.gvnix.gva.security.addon</artifactId>
				<version>${gvnix.version}</version>
				<type>jar</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-rt-ws-security</artifactId>
				<version>${cxf.version}</version>
			</dependency>
		</dependencies>
		<build>
			<plugins>
				<plugin>
					<groupId>org.apache.cxf</groupId>
					<artifactId>cxf-codegen-plugin</artifactId>
					<version>${cxf.version}</version>
					<executions>
						<execution>
							<id>AutenticacionArangiService</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>wsdl2java</goal>
							</goals>
							<configuration>
								<sourceRoot>${basedir}/target/generated-sources/client
								</sourceRoot>
								<defaultOptions>
									<extendedSoapHeaders>true</extendedSoapHeaders>
									<autoNameResolution>true</autoNameResolution>
								</defaultOptions>
								<wsdlOptions>
									<wsdlOption>
										<wsdl>${wsdl.AutenticacionArangiService}</wsdl>
										<packagenames>
											<packagename>es.gva.dgm.ayf.war.definitions.v2u00
											</packagename>
										</packagenames>
									</wsdlOption>
								</wsdlOptions>
							</configuration>
						</execution>
						<execution>
							<id>AutorizacionService</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>wsdl2java</goal>
							</goals>
							<configuration>
								<sourceRoot>${basedir}/target/generated-sources/client
								</sourceRoot>
								<defaultOptions>
									<extendedSoapHeaders>true</extendedSoapHeaders>
									<autoNameResolution>true</autoNameResolution>
								</defaultOptions>
								<wsdlOptions>
									<wsdlOption>
										<wsdl>${wsdl.AutorizacionService}</wsdl>
										<packagenames>
											<packagename>es.gva.dgm.ayf.war.definitions.v2u00
											</packagename>
										</packagenames>
									</wsdlOption>
								</wsdlOptions>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
			<resources>
				<resource>
					<directory>src/main/resources</directory>
					<excludes>
						<exclude>**/*.properties</exclude>
					</excludes>
					<filtering>false</filtering>
				</resource>
				<resource>
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.properties</include>
					</includes>
					<filtering>true</filtering>
				</resource>
			</resources>
		</build>
	</gvnix>
</configuration>