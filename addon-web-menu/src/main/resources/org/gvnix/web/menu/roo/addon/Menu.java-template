package __TOP_LEVEL_PACKAGE__.web.menu;

import java.util.ArrayList;
import java.util.List;

import org.gvnix.web.menu.roo.addon.GvNIXMenuModel;
import org.springframework.roo.addon.javabean.RooJavaBean;

/**
 * Menu Model Root class
 *
 * @author Jose Manuel Viv√≥ ( jmvivo at disid dot com ) at <a href="http://www.disid.com">DiSiD Technologies S.L.</a> made for <a href="http://www.cit.gva.es">Conselleria d'Infraestructures i Transport</a>
 *
 */
@RooJavaBean(settersByDefault = false)
@GvNIXMenuModel
public class Menu {

    /**
     * Menu's name. This is for future uses.
     */
    private String name;

    /**
     * Menu's path to add the automatically Roo menu generated items.
     *
     * This will be used by add-on
     */
    private String rooMenuBasePath;

    /***
     * First leve menu items.
     */
    private List<MenuItem> children = new ArrayList<MenuItem>();

    protected Menu(String name) {
	if (name != null) {
	    this.name = name;
	} else {
	    this.name = "menu";
	}
    }

    void setName(String name) {
	this.name = name;
    }

    void setRooMenuBasePath(String rooMenuBasePath) {
	this.rooMenuBasePath = rooMenuBasePath;
    }

    void addChild(MenuItem child) {
	this.children.add(child);
    }

}
