project --topLevelPackage org.gvnix.test.relation.list.table --projectName displayRelationsTable

persistence setup --provider HIBERNATE --database HYPERSONIC_IN_MEMORY

entity --class ~.domain.Person
field string --fieldName name --notNull
field number --fieldName age --type java.lang.Integer
field date --fieldName birthDate --type java.util.Calendar

entity --class org.gvnix.test.relation.list.table.domain.Horse
field string --fieldName name --notNull
field reference --fieldName person --type org.gvnix.test.relation.list.table.domain.Person

focus --class ~.domain.Person
field set --fieldName horses --type org.gvnix.test.relation.list.table.domain.Horse --cardinality ONE_TO_MANY --mappedBy person

entity --class org.gvnix.test.relation.list.table.domain.Car
field string --fieldName name --notNull
field reference --fieldName person --type org.gvnix.test.relation.list.table.domain.Person

focus --class ~.domain.Person
field set --fieldName cars --type org.gvnix.test.relation.list.table.domain.Car --cardinality ONE_TO_MANY --mappedBy person

controller all --package org.gvnix.test.relation.list.table.web

web mvc pattern master --class ~.web.PersonController --name personreg --type register --testAutomatically

web mvc pattern master --class ~.web.CarController --name carreg --type register --testAutomatically

web mvc pattern master --class ~.web.HorseController --name horsereg --type register --testAutomatically

web mvc pattern master --class ~.web.PersonController --name persontab --type tabular --testAutomatically

web mvc pattern master --class ~.web.CarController --name cartab --type tabular --testAutomatically

web mvc pattern master --class ~.web.HorseController --name horsetab --type tabular --testAutomatically

web mvc pattern master --class ~.web.PersonController --name personregtab --type register --testAutomatically
web mvc pattern detail --class ~.web.PersonController --name personregtab --field horses --type tabular --testAutomatically
web mvc pattern detail --class ~.web.PersonController --name personregtab --field cars --type tabular --testAutomatically

web mvc pattern master --class ~.web.PersonController --name persontabeditreg --type tabular_edit_register

web mvc pattern master --class ~.web.CarController --name cartabeditreg --type tabular_edit_register

web mvc pattern master --class ~.web.HorseController --name horsetabeditreg --type tabular_edit_register

web mvc pattern master --class ~.web.PersonController --name personregtabeditreg --type register
web mvc pattern detail --class ~.web.PersonController --name personregtabeditreg --type tabular_edit_register  --field horses
web mvc pattern detail --class ~.web.PersonController --name personregtabeditreg --type tabular_edit_register  --field cars
