project --topLevelPackage org.gvnix.test.relation.list.table --projectName displayRelationsTable

persistence setup --provider HIBERNATE --database HYPERSONIC_IN_MEMORY

entity --class ~.domain.Person
field string --fieldName name --notNull
field number --fieldName age --type java.lang.Integer
field date --fieldName birthDate --type java.util.Calendar

entity --class org.gvnix.test.relation.list.table.domain.Horse
field string --fieldName name --notNull
field reference --fieldName person --type org.gvnix.test.relation.list.table.domain.Person

focus --class ~.domain.Person
field set --fieldName horses --type org.gvnix.test.relation.list.table.domain.Horse --cardinality ONE_TO_MANY --mappedBy person

entity --class org.gvnix.test.relation.list.table.domain.Car
field string --fieldName name --notNull
field reference --fieldName person --type org.gvnix.test.relation.list.table.domain.Person

focus --class ~.domain.Person
field set --fieldName cars --type org.gvnix.test.relation.list.table.domain.Car --cardinality ONE_TO_MANY --mappedBy person

controller all --package org.gvnix.test.relation.list.table.web

web mvc pattern --class ~.web.PersonController --name personregtab --type register
//web mvc relation pattern --class ~.web.PersonController --name personregtab --field horses --type tabular
//web mvc relation pattern --class ~.web.PersonController --name personregtab --field cars --type tabular
