<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
    <scr:component enabled="true" name="org.springframework.roo.addon.oscommands.OsCommands">
        <implementation class="org.springframework.roo.addon.oscommands.OsCommands"/>
        <service servicefactory="false">
            <provide interface="org.springframework.roo.shell.CommandMarker"/>
        </service>
        <property name="service.pid" value="org.springframework.roo.addon.oscommands.OsCommands"/>
        <reference name="osOperations" interface="org.springframework.roo.addon.oscommands.OsOperations" cardinality="1..1" policy="static" bind="bindOsOperations" unbind="unbindOsOperations"/>
    </scr:component>
    <scr:component enabled="true" name="org.springframework.roo.addon.oscommands.OsOperationsImpl">
        <implementation class="org.springframework.roo.addon.oscommands.OsOperationsImpl"/>
        <service servicefactory="false">
            <provide interface="org.springframework.roo.addon.oscommands.OsOperations"/>
        </service>
        <property name="service.pid" value="org.springframework.roo.addon.oscommands.OsOperationsImpl"/>
        <reference name="pathResolver" interface="org.springframework.roo.project.PathResolver" cardinality="1..1" policy="static" bind="bindPathResolver" unbind="unbindPathResolver"/>
        <reference name="processManager" interface="org.springframework.roo.process.manager.ProcessManager" cardinality="1..1" policy="static" bind="bindProcessManager" unbind="unbindProcessManager"/>
    </scr:component>
</components>
