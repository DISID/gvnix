      <itemizedlist>
        <listitem>
          <para>Control de concurrencia</para>
        </listitem>

        <listitem>
          <para>Gestión de temas</para>
        </listitem>

        <listitem>
          <para>Gestión de excepciones</para>
        </listitem>

        <listitem>
          <para>Gestión de la estructura de páginas</para>
        </listitem>

        <listitem>
          <para>Soporte para JSP 2.0</para>
        </listitem>

        <listitem>
          <para>Gestión de la visualización de relaciones</para>
