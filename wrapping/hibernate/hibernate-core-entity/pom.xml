  <!-- Ver sistema de nominaciÃ³n en ../README.rst -->
  <groupId>${pkgGroupId}</groupId>
  <artifactId>${project.parent.groupId}.${project.groupId}</artifactId>
  <version>${pkgVersion}</version>
  <packaging>bundle</packaging>
  <name>gvNIX - OSGi - Hibernate</name>
  <description>Hibernate Bundle. This OSGi bundle wraps ${pkgCoreArtifactId} and ${pkgEntityArtifactId} ${pkgVersion} jar files.</description>

  <organization>
    <name>Conselleria d'Infraestructures, Territori i Medi Ambient - Generalitat Valenciana</name>
  </organization>

  <properties>
    <pkgGroupId>org.hibernate</pkgGroupId>
    <pkgArtifactId>hibernate</pkgArtifactId>
    <pkgCoreArtifactId>hibernate-core</pkgCoreArtifactId>
    <pkgEntityArtifactId>hibernate-entitymanager</pkgEntityArtifactId>
    <pkgVersion>3.6.7.Final</pkgVersion>
    <pkgVendor>JBoss</pkgVendor>
    <pkgDocUrl>http://www.hibernate.org/docs</pkgDocUrl>
    <pkgLicense>http://www.hibernate.org/license</pkgLicense>
    <pkgExport>!javax.persistence.*,*;version=${pkgVersion}</pkgExport>
<!--    <pkgImport>!com.ibm.*,!org.apache.tools.ant.taskdefs.*,!javax.servlet.*,org.hibernatespatial;resolution:=optional,*</pkgImport> -->
    <pkgImport>!com.ibm.*,!org.apache.tools.ant.taskdefs.*,!javax.servlet.*,*</pkgImport>
    <pkgPrivate>!*</pkgPrivate>
    <!-- <bndActivator>org.hibernate.Activator</bndActivator> -->
    <osgiVersion>${pkgVersion}.0001</osgiVersion>
  </properties>

  <dependencies>
    <dependency>
       <groupId>${pkgGroupId}</groupId>
       <artifactId>${pkgCoreArtifactId}</artifactId>
       <version>${pkgVersion}</version>
       <exclusions>
         <exclusion>
           <groupId>antlr</groupId>
           <artifactId>antlr</artifactId>
         </exclusion>
         <exclusion>
           <groupId>cglib</groupId>
           <artifactId>cglib</artifactId>
         </exclusion>
         <exclusion>
           <groupId>commons-collections</groupId>
           <artifactId>commons-collections</artifactId>
         </exclusion>
         <exclusion>
           <groupId>dom4j</groupId>
           <artifactId>dom4j</artifactId>
         </exclusion>
         <exclusion>
           <groupId>javassist</groupId>
           <artifactId>javassist</artifactId>
         </exclusion>
         <exclusion>
           <groupId>javax.transaction</groupId>
           <artifactId>jta</artifactId>
         </exclusion>
         <exclusion>
           <groupId>org.slf4j</groupId>
           <artifactId>slf4j-api</artifactId>
         </exclusion>
         <exclusion>
           <groupId>org.hibernate.javax.persistence</groupId>
           <artifactId>hibernate-jpa-2.0-api</artifactId>
         </exclusion>
       </exclusions>
    </dependency>
    <dependency>
       <groupId>${pkgGroupId}</groupId>
       <artifactId>${pkgEntityArtifactId}</artifactId>
       <version>${pkgVersion}</version>
       <exclusions>
         <exclusion>
           <groupId>cglib</groupId>
           <artifactId>cglib</artifactId>
         </exclusion>
         <exclusion>
           <groupId>javassist</groupId>
           <artifactId>javassist</artifactId>
         </exclusion>
         <exclusion>
           <groupId>org.slf4j</groupId>
           <artifactId>slf4j-api</artifactId>
         </exclusion>
         <exclusion>
           <groupId>org.hibernate.javax.persistence</groupId>
           <artifactId>hibernate-jpa-2.0-api</artifactId>
         </exclusion>
       </exclusions>
    </dependency>
  </dependencies>

