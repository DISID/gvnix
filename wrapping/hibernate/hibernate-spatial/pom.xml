  <parent>
    <groupId>org.gvnix</groupId>
    <artifactId>wrapping.hibernate</artifactId>
    <version>0.8.0-SNAPSHOT</version>
  </parent>

  <!-- Ver sistema de nominaciÃ³n en ../README.rst -->
  <groupId>${pkgGroupId}</groupId>
  <artifactId>${project.parent.groupId}.${pkgArtifactId}</artifactId>
  <version>${pkgVersion}</version>
  <packaging>bundle</packaging>
  <name>gvNIX - OSGi - Hibernate Spatial</name>
  <description>Hibernate Spatial Bundle. This OSGi bundle wraps Hibernate Spatial ${pkgVersion} jar files.</description>

  <organization>
    <name>Conselleria d'Infraestructures, Territori i Medi Ambient - Generalitat Valenciana</name>
  </organization>

  <properties>
    <pkgGroupId>org.hibernatespatial</pkgGroupId>
    <pkgArtifactId>hibernate-spatial</pkgArtifactId>
    <pkgVersion>1.1</pkgVersion>
    <pkgVendor>Geovise</pkgVendor>
    <pkgDocUrl>http://www.hibernatespatial.org/tutorial</pkgDocUrl>
    <pkgLicense>http://www.hibernatespatial.org/license.html</pkgLicense>
    <pkgExport>*;version=${pkgVersion}</pkgExport>
    <pkgImport>oracle.jdbc.*;resolution:=optional,oracle.sql;resolution:=optional,org.postgis;resolution:=optional,org.hibernate.*;version="[3.6,4.0)",*</pkgImport>
    <pkgPrivate>!*</pkgPrivate>
  </properties>

  <repositories>
    <!-- Hibernate Spatial repository -->
    <repository>
      <id>hibernate-spatial-repository</id>
      <name>Hibernate Spatial Repository</name>
      <url>http://www.hibernatespatial.org/repository</url>
    </repository>
  </repositories>

  <dependencies>
    <!-- Spatial dialect provider for PostGIS -->
    <dependency>
      <groupId>${pkgGroupId}</groupId>
      <artifactId>hibernate-spatial-postgis</artifactId>
      <version>${pkgVersion}</version>
      <exclusions><!-- Should be provided by their own bundles -->
        <exclusion>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate-core</artifactId>
        </exclusion>
        <exclusion>
          <groupId>xerces</groupId>
          <artifactId>xercesImpl</artifactId>
        </exclusion>
        <exclusion>
          <groupId>javassist</groupId>
          <artifactId>javassist</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.vividsolutions</groupId>
          <artifactId>jts</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <!-- Spatial dialect provider for Oracle -->
    <dependency>
      <groupId>${pkgGroupId}</groupId>
      <artifactId>hibernate-spatial-oracle</artifactId>
      <version>${pkgVersion}</version>
      <exclusions><!-- Should be provided by their own bundles -->
        <exclusion>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate-core</artifactId>
        </exclusion>
        <exclusion>
          <groupId>xerces</groupId>
          <artifactId>xercesImpl</artifactId>
        </exclusion>
        <exclusion>
          <groupId>javassist</groupId>
          <artifactId>javassist</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.vividsolutions</groupId>
          <artifactId>jts</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <!-- Spatial dialect provider for SqlServer -->
    <dependency>
      <groupId>${pkgGroupId}</groupId>
      <artifactId>hibernate-spatial-sqlserver</artifactId>
      <version>${pkgVersion}</version>
      <exclusions><!-- Should be provided by their own bundles -->
        <exclusion>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate-core</artifactId>
        </exclusion>
        <exclusion>
          <groupId>xerces</groupId>
          <artifactId>xercesImpl</artifactId>
        </exclusion>
        <exclusion>
          <groupId>javassist</groupId>
          <artifactId>javassist</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.vividsolutions</groupId>
          <artifactId>jts</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <!-- Spatial dialect provider for MySql -->
    <dependency>
      <groupId>${pkgGroupId}</groupId>
      <artifactId>hibernate-spatial-mysql</artifactId>
      <version>${pkgVersion}</version>
      <exclusions><!-- Should be provided by their own bundles -->
        <exclusion>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate-core</artifactId>
        </exclusion>
        <exclusion>
          <groupId>xerces</groupId>
          <artifactId>xercesImpl</artifactId>
        </exclusion>
        <exclusion>
          <groupId>javassist</groupId>
          <artifactId>javassist</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.vividsolutions</groupId>
          <artifactId>jts</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>
